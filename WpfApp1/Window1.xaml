<Window x:Class="WpfApp11.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top" FontSize="16">
            <MenuItem Header="Locations">
                <MenuItem Header="Forest" Click="FClickTV" ></MenuItem>
                <MenuItem Header="Swamp" Click="SClickTV" ></MenuItem>
                <MenuItem Header="Mountain" Click="MClickTV" ></MenuItem>
                <MenuItem Header="Caves" Click="CClickTV" ></MenuItem>
                <MenuItem Header="Town" Click="TClickTV" >
                    <MenuItem Header="Smithery" Click="SSClickTV"></MenuItem>
                    <MenuItem Header="Magic Tower" Click="MMClickTV"></MenuItem>
                    <MenuItem Header="Guild" Click="GGClickTV"></MenuItem>
                </MenuItem>
                <Separator />
            </MenuItem>
            <MenuItem Header="Equipment" >
                <MenuItem Header="Inventory" ></MenuItem>
                <MenuItem Header="Sets" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings" ></MenuItem>
        </Menu>
        <ProgressBar x:Name="PG1" HorizontalAlignment="Center" Height="50" Margin="0,346,0,0" VerticalAlignment="Top" Width="670" Visibility="Hidden"/>

    </Grid>
</Window>
